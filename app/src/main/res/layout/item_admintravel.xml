<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/rounded"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_travel"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:src="@drawable/defaultimg"
            android:background="@drawable/rounded"/>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title Destination"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/start_travel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Station"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp" />


            <TextView
                android:id="@+id/end_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Station"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/price_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/description_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_hapus"
            android:layout_marginTop="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_delete_24"/>

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_edit_24"/>
    </LinearLayout>
</LinearLayout>

