<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".HistoryOrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/darkblue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/baseline_navigate_before_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Plans"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"
            android:paddingLeft="85dp"
            android:paddingTop="5dp"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_travel_detail"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:src="@drawable/defaultimg"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_travel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Title Travel"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Start :"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:layout_marginRight="16dp"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/start_travel_detail"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Start Station"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="End   :"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:layout_marginRight="16dp"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/end_travel_detail"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="End Station"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/rounded_rating_duration">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/star"/>
            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:text="8.9/10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/rounded_rating_duration">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:text="Quality"/>
            <TextView
                android:id="@+id/quaity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:text="Good "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/rounded_rating_duration">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:text="Price"/>
            <TextView
                android:id="@+id/price_travel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:text="Rp. 1000000 "/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSelectDate"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:text="Select Date"/>

        <TextView
            android:id="@+id/date_text_view"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/datepicker_button"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/calendar"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/orange"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"/>
    <TextView
        android:id="@+id/description_travel_detail"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Description"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/Order"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        android:backgroundTint="@color/darkblue"
        />
</LinearLayout>
